{
  "name": "miniplex-project",
  "private": true,
  "version": "0.2.0",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "benchmark": "pnpm -F @miniplex/core benchmark",
    "postinstall": "preconstruct dev",
    "dev": "preconstruct dev",
    "demo:react": "pnpm dev && pnpm -F demo dev",
    "demo:vanilla": "pnpm dev && pnpm -F vanilla-demo dev",
    "build": "preconstruct build",
    "test": "jest",
    "ci": "preconstruct validate && pnpm build && pnpm test",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile",
    "ci:release": "pnpm ci && pnpm changeset publish"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "printWidth": 80
  },
  "dependencies": {
    "@babel/core": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@changesets/cli": "^2.25.2",
    "@preconstruct/cli": "^2.2.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^29.2.1",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@types/testing-library__jest-dom": "^5.14.5",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.1",
    "typedoc": "^0.23.19",
    "typescript": "^4.8.4"
  }
}
