{
  "name": "miniplex-project",
  "private": true,
  "version": "0.2.0",
  "license": "MIT",
  "scripts": {
    "benchmark": "pnpm -F miniplex benchmark",
    "postinstall": "preconstruct dev",
    "dev": "preconstruct dev",
    "demo:react": "pnpm dev && pnpm -F demo dev",
    "demo:vanilla": "pnpm dev && pnpm -F vanilla-demo dev",
    "build": "preconstruct build",
    "test": "jest",
    "ci": "preconstruct validate && pnpm build && pnpm test",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile",
    "ci:release": "pnpm run ci && pnpm changeset publish"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "printWidth": 80
  },
  "dependencies": {
    "@babel/core": "^7.22.8",
    "@babel/preset-env": "^7.22.7",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@changesets/cli": "^2.26.2",
    "@preconstruct/cli": "^2.8.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/testing-library__jest-dom": "^5.14.7",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "stackblitz": {
    "startCommand": "pnpm demo:react"
  }
}
